<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:focusable="false"
        app:srcCompat="@drawable/yourname" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:focusable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clv_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:focusable="false"
            android:text="TextView" />

        <TextView
            android:id="@+id/clv_productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#c75457"
            android:focusable="false"
            android:text="TextView" />

        <TextView
            android:id="@+id/clv_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:focusable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:focusable="false"
            android:text="TextView" />

        <TextView
            android:id="@+id/clv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#2b4266"
            android:textColor="#ffffff"
            android:focusable="false"
            android:layout_marginRight="10dp"
            android:text="TextView" />

        <Button
            android:id="@+id/clv_zzim_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#ffffff"
            android:drawableLeft="@drawable/zzim2"
            android:text="찜하기"
            android:focusable="false"
            android:layout_marginRight="10dp"
            android:textColor="#828282" />

    </LinearLayout>

</LinearLayout>